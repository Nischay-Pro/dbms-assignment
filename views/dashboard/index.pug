doctype html
html.no-js(lang='zxx')
	head
		meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
		link(rel='shortcut icon', href='img/fav.png')
		meta(name='author', content='Nischay Ram Mamidi')
		meta(name='description', content='')
		meta(name='keywords', content='')
		meta(charset='UTF-8')
		title Blood Donation
		link(href='https://fonts.googleapis.com/css?family=Poppins:300,500,600', rel='stylesheet')
		link(rel='stylesheet', href='css/linearicons.css')
		link(rel='stylesheet', href='css/font-awesome.min.css')
		link(rel='stylesheet', href='css/nice-select.css')
		link(rel='stylesheet', href='css/magnific-popup.css')
		link(rel='stylesheet', href='css/bootstrap.css')
		link(rel='stylesheet', href='css/main.css')
		style.
			.col-md-4:hover {
				background-color: #f6f6fc;
				box-shadow: 4px 4px #f5f5fc;
			}
	body
		.oz-body-wrap
			// Start Header Area
			header.default-header.generic-header
				.container-fluid
					.header-wrap
						.header-top.d-flex.justify-content-between.align-items-center
							.logo
								a(href='/dashboard')
									img(src='img/logo.png', alt='')
							.main-menubar.d-flex.align-items-center
								nav.hide
									a(href='/dashboard') Welcome #{username}
									a(href='/dashboard/profile') My Profile
									a(href='/logout') Log Out
								.menu-bar
									span.lnr.lnr-menu
			section.generic-banner.elements-banner.relative
				.container
					.row.height.align-items-center.justify-content-center
						.col-lg-10
							.banner-content.text-center
								h2 Blood Donation System
								p
									|  Woohoo! We donated #{donate} ml of blood.
			.white-bg
				.container
					.section-top-border
						h3.mb-30 Available Dashboards
						.row
							.col-md-4(onclick="window.location.href = '/dashboard/drive';")
								.single-defination
									h4.mb-20 Blood Drive
									p
										| Create and Manage your Blood Donation Drives.
							.col-md-4(onclick="window.location.href = '/dashboard/donors';")
								.single-defination
									h4.mb-20 Donor Management
									p
										| Create and Manage Donors. Register blood donors and generate their individual reports.
							.col-md-4(onclick="window.location.href = '/dashboard/donate';")
								.single-defination
									h4.mb-20 Blood Donation Transaction
									p
										| Record a Blood Donor donating blood.

			script(src='js/vendor/jquery-2.2.4.min.js')
			script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js', integrity='sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4', crossorigin='anonymous')
			script(src='js/vendor/bootstrap.min.js')
			script(src='js/jquery.ajaxchimp.min.js')
			script(src='js/owl.carousel.min.js')
			script(src='js/jquery.nice-select.min.js')
			script(src='js/jquery.magnific-popup.min.js')
			script(src='js/main.js')
