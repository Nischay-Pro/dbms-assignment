doctype html
html.no-js(lang='zxx')
	head
		meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
		link(rel='shortcut icon', href='img/fav.png')
		meta(name='author', content='Nischay Ram Mamidi')
		meta(name='description', content='')
		meta(name='keywords', content='')
		meta(charset='UTF-8')
		title Blood Donation
		link(href='https://fonts.googleapis.com/css?family=Poppins:300,500,600', rel='stylesheet')
		link(rel='stylesheet', href='/css/linearicons.css')
		link(rel='stylesheet', href='/css/font-awesome.min.css')
		link(rel='stylesheet', href='/css/nice-select.css')
		link(rel='stylesheet', href='/css/magnific-popup.css')
		link(rel='stylesheet', href='/css/bootstrap.css')
		link(rel='stylesheet', href='/css/main.css')
	body
		.oz-body-wrap
			// Start Header Area
			header.default-header.generic-header
				.container-fluid
					.header-wrap
						.header-top.d-flex.justify-content-between.align-items-center
							.logo
								a(href='/dashboard/donors')
									img(src='/img/logo.png', alt='')
							.main-menubar.d-flex.align-items-center
								nav.hide
									a(href='/dashboard') Go back to Dashboard
									a(href='/dashboard/donors') Donor Dashboard
									a(href='/logout') Log Out
								.menu-bar
									span.lnr.lnr-menu
			section.sample-text-area
				.container
					h3.text-heading Donor Management
					p.sample-text
						.row
							.col-3
								a.genric-btn.primary.circle.arrow(href='/dashboard/donors/create') Register Donor
									span.lnr.lnr-arrow-right
			.white-bg
				.container
					.section-top-border
						if message
							if type == 'alert-success'
								.alert.alert-success(role='alert')
									| #{message}
							else
								.alert.alert-danger(role='alert')
									| #{message}
						h3 Donors Registered
						br
						table.table.table-hover
							thead
								tr
									th(scope='col') #
									th(scope='col') Full Name
									th(scope='col') Gender
									th(scope='col') Blood Group
									th(scope='col') Country
									th(scope='col') State
									th(scope='col') Phone
									th(scope='col') Control
							tbody
								for donor in donors
									tr
										th(scope='row') #{donor.id}
										td #{donor.full_name.replace("|"," ")}
										td #{donor.gender}
										td #{donor.blood_group}
										td #{donor.country}
										td #{donor.state}
										td 
											a(href='tel:' + donor.phone) #{donor.phone}
										td
											a.genric-btn.success.circle.arrow.small(href='/dashboard/donors/view/' + donor.id)
												| Edit
												span.lnr.lnr-pencil
											a.genric-btn.danger.circle.arrow.small(href='/dashboard/donors/delete/' + donor.id)
												| Delete
												span.lnr.lnr-trash
			script(src='/js/vendor/jquery-2.2.4.min.js')
			script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js', integrity='sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4', crossorigin='anonymous')
			script(src='/js/vendor/bootstrap.min.js')
			script(src='/js/jquery.ajaxchimp.min.js')
			script(src='/js/owl.carousel.min.js')
			script(src='/js/jquery.nice-select.min.js')
			script(src='/js/jquery.magnific-popup.min.js')
			script(src='/js/main.js')
