doctype html
html.no-js(lang='zxx')
	head
		meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
		link(rel='shortcut icon', href='img/fav.png')
		meta(name='author', content='Nischay Ram Mamidi')
		meta(name='description', content='')
		meta(name='keywords', content='')
		meta(charset='UTF-8')
		title Blood Donation
		link(href='https://fonts.googleapis.com/css?family=Poppins:300,500,600', rel='stylesheet')
		link(rel='stylesheet', href='/css/linearicons.css')
		link(rel='stylesheet', href='/css/font-awesome.min.css')
		link(rel='stylesheet', href='/css/nice-select.css')
		link(rel='stylesheet', href='/css/magnific-popup.css')
		link(rel='stylesheet', href='/css/bootstrap.css')
		link(rel='stylesheet', href='/css/main.css')
	body
		.oz-body-wrap
			// Start Header Area
			header.default-header.generic-header
				.container-fluid
					.header-wrap
						.header-top.d-flex.justify-content-between.align-items-center
							.logo
								a(href='/dashboard/donors')
									img(src='/img/logo.png', alt='')
							.main-menubar.d-flex.align-items-center
								nav.hide
									a(href='/dashboard') Go back to Dashboard
									a(href='/dashboard/drive') Blood Drive Dashboard
									a(href='/logout') Log Out
								.menu-bar
									span.lnr.lnr-menu
			section.sample-text-area
				.container
					h3.text-heading Blood Drive Management
					p.sample-text
						.row
							.col-4
								a.genric-btn.primary.circle.arrow(href='/dashboard/drive/create') Register Blood Drive
									span.lnr.lnr-arrow-right
							.col-4
								a.genric-btn.primary.circle.arrow(href='/dashboard/drive/client') Register Blood Drive Client
									span.lnr.lnr-arrow-right
			.white-bg
				.container
					.section-top-border
						if message
							if type == 'alert-success'
								.alert.alert-success(role='alert')
									| #{message}
							else
								.alert.alert-danger(role='alert')
									| #{message}
						ul#myTab.nav.nav-tabs(role='tablist')
							li.nav-item
								a#drive-tab.nav-link.active(data-toggle='tab', href='#drive', role='tab', aria-controls='drive', aria-selected='true') Blood Drives
							li.nav-item
								a#client-tab.nav-link(data-toggle='tab', href='#client', role='tab', aria-controls='client', aria-selected='false') Blood Drive Clients
						// Tab panes
						.tab-content
							#drive.tab-pane.active(role='tabpanel', aria-labelledby='drive-tab')
								br
								h4 Blood Drives Created
								br
								table.table.table-hover
									thead
										tr
											th(scope='col') #
											th(scope='col') Start
											th(scope='col') End
											th(scope='col') Drive Name
											th(scope='col') Location
											th(scope='col') Client Name
											th(scope='col') Control
									tbody
										for drive in drives
											tr
												th(scope='row') #{drive.id}
												td #{drive.start}
												td #{drive.end}
												td #{drive.drive_name}
												td #{drive.location}
												td #{drive.name}
												td
													a.genric-btn.success.circle.arrow.small(href='/dashboard/drive/view/' + drive.id)
														| Edit
														span.lnr.lnr-pencil
													a.genric-btn.danger.circle.arrow.small(href='/dashboard/drive/delete/' + drive.id)
														| Delete
														span.lnr.lnr-trash
							#client.tab-pane(role='tabpanel', aria-labelledby='client-tab')
								br
								h4 Blood Clients Created
								br
								table.table.table-hover
									thead
										tr
											th(scope='col') #
											th(scope='col') Name
											th(scope='col') Address
											th(scope='col') Phone Number
									tbody
										for client in clients
											tr
												th(scope='row') #{client.id}
												td #{client.name}
												td #{client.address}
												td 
													a(href='tel:' + client.phone_number) #{client.phone_number}
			script(src='/js/vendor/jquery-2.2.4.min.js')
			script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js', integrity='sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4', crossorigin='anonymous')
			script(src='/js/vendor/bootstrap.min.js')
			script(src='/js/jquery.ajaxchimp.min.js')
			script(src='/js/owl.carousel.min.js')
			script(src='/js/jquery.nice-select.min.js')
			script(src='/js/jquery.magnific-popup.min.js')
			script(src='/js/main.js')
			script.
				$('#myTab a').on('click', function (e) {
				e.preventDefault()
				$(this).tab('show')
				})
